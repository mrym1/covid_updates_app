<!doctype html>
<html lang="en">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-KyZXEAg3QhqLMpG8r+8fhAXLRk2vvoC2f3B09zVXn8CA5QIVfZOJ3BCsw2P0p/We" crossorigin="anonymous">
    <link rel="stylesheet" href="https://maxst.icons8.com/vue-static/landings/line-awesome/line-awesome/1.3.0/css/line-awesome.min.css">
    <link rel="stylesheet" href="style/input.css">
    <link rel="icon" href="images/icon.png" type="image/x-icon">
    <title>Covid App</title>
  </head>
  <body>
     <main class="d-flex align-items-center justify-content-center">
        <div class="card text-white innerdiv mb-3" style="width: 460px; height: 300px; background: radial-gradient(circle, rgba(103, 255, 57, 0.884) 0%,rgba(240, 57, 96, 0.938) 100%);">
            <div class="d-flex justify-content-center mt-3">
                <img src="/images/icon.png" class="card-img-top icon" alt="..." style=" width: 150px; height: 150px;">
            </div>
            <div class="card-body">
                <form action="/" method="POST">
                    <select name="country" class="Selectfield rounded-pill form-select fw-bold mt-3">
                    <option selected>Select Country</option>
                    <% for(let i=0; i<country1.length; i++) {%>
                        <option value= "<%- country1[i].name %>">
                            <%= country1[i].name %>
                        </option>
                        <% } %>
                  </select>
                    <div class="text-center m-2">
                        <button class="btn btn-outline-dark px-4 fw-bold rounded-pill">Submit</button>
                    </div>
                </form>
            </div>
    </main>

    <!-- Optional JavaScript; choose one of the two! -->

    <!-- Option 1: Bootstrap Bundle with Popper -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.0/dist/js/bootstrap.bundle.min.js" integrity="sha384-U1DAWAznBHeqEIlVSCgzq+c9gqGAJn5c/t99JyeKa9xxaYpSvHU5awsuZVVFIhvj" crossorigin="anonymous"></script>

    <!-- Option 2: Separate Popper and Bootstrap JS -->
